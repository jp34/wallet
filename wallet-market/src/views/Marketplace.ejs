<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JustBe Marketplace</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="header__logo">JustBe Marketplace</div>
    </header>

    <div class="wrapper">
        <div class="market">
            <% if(info != null) {%>
            <% info.forEach(function(NFT, index) { %>
                <div class="cardcontent">
                    <div class="market__card">
                        <h2 class="market__card__title">
                            NFT #<%- index+1 %>
                        </h2>
                        <p class="market__card__body"> 
                            NFT ID: <%- NFT._id %> 
                        </p>
                        <a href="/fact/<%-NFT._id %>" class="card__button">Learn More</a>
                    </div>
                </div>
            <% }) %>
            <% } else { %>
                No information available.
            <% } %>
        </div>
    </div>
</body>
</html>